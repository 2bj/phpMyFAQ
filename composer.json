{
    "name":        "thorsten/phpMyFAQ",
    "description": "FAQ System",
    "keywords":    [ "phpMyFAQ", "FAQ" ],
    "homepage":    "http://www.phpmyfaq.de",
    "license":     "MPL 2.0",
    "type":        "application",
    "authors": [
        {
            "name":  "Thorsten Rinne",
            "email": "thorsten@phpmyfaq.de"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name":    "phpseclib",
                "version": "master",
                "source": {
                    "url":       "https://github.com/phpseclib/phpseclib.git",
                    "type":      "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name":    "tcpdf",
                "version": "master",
                "source": {
                    "url":       "http://git.code.sf.net/p/tcpdf/code",
                    "type":      "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name":    "twitteroauth",
                "version": "master",
                "source": {
                    "url":       "https://github.com/abraham/twitteroauth.git",
                    "type":      "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php":          ">=5.3.2",
        "phpseclib":    "master",
        "tcpdf":        "master",
        "twitteroauth": "master"
    },
    "minimum-stability": "dev",
    "scripts": {
        "post-install-cmd": [
            "scripts/moveVendors.sh"
        ],
        "post-update-cmd": [
            "scripts/moveVendors.sh"
        ]
    }
}